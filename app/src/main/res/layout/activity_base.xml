<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wuht.guidelearningview.MainActivity">

    <ImageView
        android:id="@+id/iv_A1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="134dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/iv_A3"
        android:layout_toRightOf="@+id/iv_A3"
        android:src="@mipmap/ic_reddit"
        android:text="Hello World!"/>

    <ImageView
        android:id="@+id/iv_A2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/iv_A1"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_toEndOf="@+id/iv_A1"
        android:layout_toRightOf="@+id/iv_A1"
        android:src="@mipmap/ic_evenote"
        android:text="Hello World!"/>

    <Button
        android:id="@+id/btn_A1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        android:layout_above="@+id/iv_A3"
        android:layout_alignLeft="@+id/iv_A2"
        android:layout_alignStart="@+id/iv_A2"/>

    <ImageView
        android:id="@+id/iv_A3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="51dp"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp"
        android:src="@mipmap/ic_facebook"
        android:text="Hello World!"
        android:layout_above="@+id/iv_A2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
